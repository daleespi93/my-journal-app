<% @categories.each do |category|%>
<tr>
  <td> <%= category.title %> </td>
  <td> <%= link_to 'Show', category_path(category.id) %> </td>
  <td> <%= link_to 'Edit', edit_category_path(category.id) %> </td>
  <td> <%= button_to 'Delete', category_path(category.id), method: :delete %> </td>
</tr>
<% end %>